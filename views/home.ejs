<%- include('partials/header') %>

<% if(message.length > 0){ %>
   <div class="alert alert-primary notifi" role="alert">
      <%= message %>
   </div>
   <% } %>
   
<div id="jumbo" class="jumbotron text-center">
      <h1 id="mainHeader"><i style="padding-right: 0.75rem;" class="fa fa-calendar" aria-hidden="true"></i>  SAMBHALO</h1>
      <p>The event management software</p>
</div>

<div class="row">
   <div class="col-lg-6">
               <form id="visitorForm" class="col-lg-9" action="/" method="POST">
                  <legend><i class="fa fa-id-card"></i> New Visitor form</legend>
                  <div class="form-group row">
                     <label class="col-sm-4 col-form-label" for="name"><i class="fa fa-user" aria-hidden="true"></i>  Name</label>
                     <div class="col-sm-8 px-0">
                        <input class="form-control px-0" id="name" name="name" type="text" placeholder="enter your name" required>
                     </div>
                  </div>
                  <div class="form-group row">
                     <label class="col-sm-4 col-form-label" for="email"><i class="fa fa-envelope" aria-hidden="true"></i> Email</label>
                     <div class="col-sm-8 px-0">
                        <input class="form-control px-0" id="email" name="email" type="email" placeholder="example@xyz.com" required>
                     </div>
                  </div>
                  <div class="form-group row">
                     <label class="col-sm-4 col-form-label" for="contact"><i class="fa fa-phone-square" aria-hidden="true"></i>  Contact: +91</label>
                     <div class="col-sm-8 px-0">
                        <input class="form-control" id="contact" name="contact" type="text" pattern="\d{10}" title="enter a 10 digit phone number" placeholder="enter your number" required>
                     </div>
                  </div>
                  <div class="form-group row">
                     <div class="col-sm-4 px-0">
                        <button type="submit" class="btn btn-block btn-success">CheckIn</button>
                     </div>
                  </div>
   </div>
   <div class="col-lg-6">
      <h4><i class="fa fa-users" aria-hidden="true"></i>  Select your host</h4>
         <table class="table table-hover table-bordered table-dark">
               <thead>
               <tr>
               <th scope="col">Selction</th>
               <th scope="col">Name</th>
               <th scope="col">Email</th>
               <th class="d-none d-xl-block" scope="col">Contact</th>
               </tr>
               </thead>
               <tbody>
               <% hosts.forEach(host => { %>
               <tr scope="row">
               <td><input name="hostId" value=<%= host._id %> type="radio"></td>
               <td><%= host.name %></td>
               <td><%= host.email %></td>
               <td class="d-none d-xl-block" ><%= host.contact %></td>  
               </tr>
               <% }) %>
               </tbody>
               </table>
               </form>              
              </div>
   </div>

<div class="container">
   <div class="row">
      <div class="col-6 px-0">
         <a href="/meeting"><button class="btn btn-primary" style="cursor: pointer;">Checkedin ?</button></a>
   </div>
   <div class="col-6">
         <a href="/newHost"><button class="btn btn-info" style="cursor: pointer;">Become a host !!</button></a>
      </div>
   </div>
</div>

<%- include('partials/footer') %>