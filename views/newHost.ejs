<%- include('partials/header') %>

<div id="jumbo" class="jumbotron text-center">
      <h1><i style="padding-right: 0.75rem;" class="fa fa-users" aria-hidden="true"></i>  BECOME A HOST</h1>
      <p>Join the awesomeness</p>
</div>

<% if(message.length > 0){ %>
<div class="alert alert-primary notifi" role="alert">
   <%= message %>
</div>
<% } %>

<div class="row">
      <div class="col-lg-6">
                  <form id="visitorForm" class="col-lg-9 px-0" action="/newHost" method="POST">
                     <legend><i class="fa fa-id-card"></i> New Host form</legend>
                     <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="name"><i class="fa fa-user" aria-hidden="true"></i>  Name</label>
                        <div class="col-sm-8 px-0">
                           <input class="form-control px-0" id="name" name="name" type="text" placeholder="enter your name" required>
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="email"><i class="fa fa-envelope" aria-hidden="true"></i> Email</label>
                        <div class="col-sm-8 px-0">
                           <input class="form-control px-0" id="email" name="email" type="email" placeholder="example@xyz.com" required>
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="contact"><i class="fa fa-phone-square" aria-hidden="true"></i>  Contact: +91</label>
                        <div class="col-sm-8 px-0">
                           <input class="form-control" id="contact" name="contact" type="text" pattern="\d{10}" title="enter a 10 digit phone number" placeholder="enter your number" required>
                        </div>
                     </div>
                     <div class="form-group row">
                           <label class="col-sm-4 col-form-label" for="address"><i class="fa fa-map-marker" aria-hidden="true"></i>  Address</label>
                           <div class="col-sm-8 px-0">
                              <input class="form-control" id="address" name="address" type="text" title="enter your address" placeholder="enter your address" required>
                           </div>
                        </div>
                     <div class="form-group row">
                        <div class="col-sm-4">
                           <button type="submit" class="btn btn-block btn-success">Submit</button>
                        </div>
                     </div>
                     </form>
                     <a href="/"><button class="btn btn-info" style="cursor: pointer;">Home</button></a>        
                     </div>
                     <%- include('partials/footer') %>